        <div id="carouselExampleRide" class="carousel slide" data-bs-ride="false">
          <div class="carousel-inner myCarousel">
            <div class="carousel-item active">
              <img src="../Images/ProductImages/Rucksack1/image1.jpg" width="100%" height="250px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="../Images/ProductImages/Rucksack1/image2.jpg" width="100%" height="250px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="../Images/ProductImages/Rucksack1/image3.jpg" width="100%" height="250px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="../Images/ProductImages/Rucksack1/image4.jpg" width="100%" height="250px" class="d-block w-100" alt="...">
